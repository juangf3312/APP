<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatPersonal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="208dp"
        android:layout_height="143dp"
        android:layout_marginTop="276dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/desohorante"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="165dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="128dp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/crema"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="165dp" />

    <RadioButton
        android:id="@+id/personal_care_radio_button"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:background="#F23C5C"
        android:backgroundTint="#F23C5C"
        android:text="@string/toothpaste"
        android:textColor="#F8F8F8"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="194dp" />

    <RadioButton
        android:id="@+id/personal_care_radio_button2"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:background="#F23C5C"
        android:backgroundTint="#F23C5C"
        android:text="@string/deodorant"
        android:textColor="#F8F8F8"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="443dp" />

    <TextView
        android:id="@+id/precio_producto1"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:background="#F23C5C"
        android:backgroundTint="#F23C5C"
        android:text="Price to pay:12000$"
        android:textColor="#F8F8F8"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/precio_producto2"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:background="#F23C5C"
        android:backgroundTint="#F23C5C"
        android:text="Price to pay:15000$"
        android:textColor="#F8F8F8"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteY="329dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#f23c5c"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,VisualLintOverlap"
        tools:layout_editor_absoluteY="518dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
