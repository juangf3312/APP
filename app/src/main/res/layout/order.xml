<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F23C5C"
            android:backgroundTint="#F23C5C"
            android:text="CATEGORY"
            android:textColor="#F8F8F8"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <EditText
            android:id="@+id/category_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/product_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F23C5C"
            android:backgroundTint="#F23C5C"
            android:text="PRODUCT"
            android:textColor="#F8F8F8"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <EditText
            android:id="@+id/product_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F23C5C"
            android:backgroundTint="#F23C5C"
            android:text="AMOUNT"
            android:textColor="#F8F8F8"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <EditText
            android:id="@+id/quantity_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/origin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F23C5C"
            android:backgroundTint="#F23C5C"
            android:text="PLACE OF ORIGIN"
            android:textColor="#F8F8F8"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <EditText
            android:id="@+id/origin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/destination_label"
            android:layout_width="147dp"
            android:layout_height="33dp"
            android:background="#F23C5C"
            android:backgroundTint="#F23C5C"
            android:text="DESTINATION PLACE"
            android:textColor="#F8F8F8"
            tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

        <EditText
            android:id="@+id/destination_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#F8F8F8"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <Button
            android:id="@+id/calculate_button"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:background="#F23C5C"
            android:backgroundTint="#F23C5C"
            android:text="CALCULATE TOTAL PRICE"
            android:textColor="#F8F8F8"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F23C5C"
            android:backgroundTint="#F23C5C"
            android:text="FULL SALE"
            android:textColor="#F8F8F8"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>