<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Catcocina">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/lavaloza"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="161dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="181dp"
        android:layout_height="130dp"
        app:srcCompat="@mipmap/esponja"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="236dp" />

    <RadioButton
        android:id="@+id/personal_care_radio_button"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:background="#F23C5C"
        android:backgroundTint="#F23C5C"
        android:text="@string/dishwasher"
        android:textColor="#F8F8F8"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="171dp" />

    <RadioButton
        android:id="@+id/personal_care_radio_button2"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:background="#F23C5C"
        android:backgroundTint="#F23C5C"
        android:text="@string/glitter_sponge"
        android:textColor="#F8F8F8"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:id="@+id/precio_producto1"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:background="#F23C5C"
        android:backgroundTint="#F23C5C"
        android:text="Price to pay:9000$"
        android:textColor="#F8F8F8"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="71dp" />

    <TextView
        android:id="@+id/precio_producto2"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:background="#F23C5C"
        android:backgroundTint="#F23C5C"
        android:text="Price to pay:5000$"
        android:textColor="#F8F8F8"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="284dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#f23c5c"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,VisualLintOverlap"
        tools:layout_editor_absoluteY="492dp" />

</androidx.constraintlayout.widget.ConstraintLayout>